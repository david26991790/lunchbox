<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/school"
    android:orientation="vertical"
    tools:context=".Schoolpage">

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:background="#00ffffff"
        android:src="@drawable/homebutton"
        android:onClick="gomainpage"/>

    <ImageButton
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00ffffff"
        android:src="@drawable/schoolinfo"
        android:textSize="24dp"
        android:onClick="schoolinfo"/>

    <ImageButton
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="#00ffffff"
        android:src="@drawable/schoolocate"
        android:textSize="24dp"
        android:onClick="schoolocate"
        />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:background="#00ffffff"
        android:src="@drawable/homebutton" />

    <ImageButton
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="#00ffffff"
        android:src="@drawable/schoolclass"
        android:textSize="24dp"
        android:onClick="schoolclass"/>/>

    <ImageButton
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#00ffffff"
        android:src="@drawable/schoolweb"
        android:gravity="center"
        android:textSize="24dp"
        android:onClick="schoolweb"/>


</LinearLayout>