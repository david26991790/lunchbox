<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:orientation="vertical"
    android:background="@drawable/school"
    tools:context=".Lunchrandom">
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:background="#00ffffff"
        android:src="@drawable/homebutton"
        android:onClick="gomainpage"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/random_maintitle"
        android:layout_gravity="center"
        android:background="#00ffffff"/>

    <ImageView
        android:id="@+id/diceImageView"
        android:layout_width="282dp"
        android:layout_height="225dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/lunchbox" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/random_gameinfo"
        android:background="#00ffffff"
        android:layout_marginBottom="60dp"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/random_gamestart"
        android:background="#00ffffff"
        android:layout_marginBottom="60dp"
        android:onClick="gamestart"
        android:id="@+id/rollButton"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/random_gameagain"
        android:background="#00ffffff"/>

    </LinearLayout>