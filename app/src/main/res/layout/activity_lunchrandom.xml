<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".Lunchrandom">

    <TextView
        android:id="@+id/foodname"
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/foodlabel"
        android:fontFamily="@font/lunchword"
        android:gravity="center_horizontal"
        android:textSize="40sp" />

    <ImageView
        android:id="@+id/diceImageView"
        android:layout_width="282dp"
        android:layout_height="225dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/lunchbox" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/random_foodinfo"
        android:onClick="go_scroll"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_marginLeft="55dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#00ffffff"
            android:src="@drawable/random_gameinfo"
            android:onClick="go_gameinfo"/>

        <ImageButton
            android:id="@+id/rollButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:background="#00ffffff"
            android:onClick="gamestart"
            android:src="@drawable/random_gamestart" />

    </LinearLayout>


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_gravity="bottom"
        android:background="#00ffffff"
        android:onClick="go_mainPage"
        android:src="@drawable/homebutton" />

</LinearLayout>